# git config file
# dwilliams, 2019

[alias]
        br = branch
        co = checkout
        ea = submodule foreach
        ls = ls-files
        st = status
        sta = show --stat
        stat = show --stat
        pf = push --force-with-lease
        sub = submodule
        subup = sub update --init --recursive

[user]
        name = Daniel Williams
        email = equipoise@gmail.com
        
[core]
        autocrlf = input
        filemode = false
        editor = jmacs
	excludesfile = ~/.gitignore

[push]
	default = simple

[merge]
	commit = no
	ff = only

[log]
	abbrevcommit = true
        decorate = auto

[format]
	pretty = oneline

# [receive]
#	denyCurrentBranch = updateInstead
# [status]
#	submodulesummary = 1
#
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
