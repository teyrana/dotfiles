# git config file
# dwilliams, 2019

[alias]
        br = branch
        co = checkout
        ea = submodule foreach
        head = rev-parse --show-toplevel
        ls = ls-files
        st = status
        sta = show --stat
        stat = show --stat
        pf = push --force-with-lease
	root = rev-parse --show-toplevel
        sub = submodule
        subup = sub update --init --recursive

[user]
        name = Daniel Williams
        email = equipoise@gmail.com
        
[core]
        autocrlf = input
        filemode = false
        editor = emacs-nox
	excludesfile = ~/.gitignore

[push]
	default = simple

[merge]
	commit = no
	ff = only

[log]
	abbrevcommit = true
        decorate = auto

[format]
	pretty = oneline

